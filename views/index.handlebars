<div class="text-center header-con">
<h1>Servin' Burgers</h1>
</div>

<div class="container">
    <div class="row justify-content-between">
        <div class="col-4 burger-col text-center">
            <h2>Undevoured Burgers</h2>
            <div class="burgers-div">
                <ul class="burgers-list text-center">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burgers-card devoured=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-4 burger-col text-center">
            <h2>Devoured Burgers</h2>
            <div class="burgers-div">
                <ul class="burgers-list text-center">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burgers-card devoured=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="row justify-content-center top-buffer">
        <div class="col-10 new-burger-col text-center">
            <h2>Add a new burger!</h2>  
            <form class="form-div">
                <div class="form-block">
                    <label>Burger Name</label><br><input type="text" id="burg-name" name="name">
                </div>
                <div class="form-block">
                    <label class="ing-input-label">Ingredients</label><br>
                    {{#each allIngredients as |ingredients index|}}
                    <input type="checkbox" value={{index}}>{{ingredients}}
                    {{/each}}
                    <input class="ingr-input"type="text" id="ingr-name" name="name"><button class="submit-ingredient" id="submit-ingredient" type="submit">Add New Ingredient</button><br>
                </div>
                     <button type="submit">Add Burger</button>
                    
                
            </form>
        </div>
    </div>
</div>